NEXT_PUBLIC_MIXPANEL_TOKEN=""
NEXT_PUBLIC_HOTJAR_ID=""

# Error Reporting & Monitoring
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
