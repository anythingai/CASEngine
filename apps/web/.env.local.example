# Cultural Arbitrage Signal Engine - Frontend Configuration
# Copy this file to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_NAME="Cultural Arbitrage Signal Engine"
NEXT_PUBLIC_APP_TAGLINE="Trade the trend before it trends — with taste‑powered alpha"

# Environment URLs
# Development
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Production (Update these with your deployment URLs)
# NEXT_PUBLIC_APP_URL="https://cultural-arbitrage.vercel.app"
# NEXT_PUBLIC_API_URL="https://cultural-arbitrage-api.railway.app"
# OR
# NEXT_PUBLIC_API_URL="https://cultural-arbitrage-api.onrender.com"

# API Configuration
NEXT_PUBLIC_API_VERSION="v1"
NEXT_PUBLIC_API_TIMEOUT="30000"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_SEARCH_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_THEME_TOGGLE=true

# Production Feature Flags (for deployment)
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_DEBUG=false

# Search Configuration
NEXT_PUBLIC_SEARCH_DEBOUNCE_MS="300"
NEXT_PUBLIC_MAX_SEARCH_RESULTS="10"
NEXT_PUBLIC_SEARCH_TIMEOUT_MS="15000"

# Cultural Analysis Settings
NEXT_PUBLIC_DEFAULT_CONFIDENCE_THRESHOLD="0.7"
NEXT_PUBLIC_MAX_THEMES_EXPANSION="20"
NEXT_PUBLIC_ENABLE_TASTE_PROFILING=true

# UI/UX Settings
NEXT_PUBLIC_DEFAULT_THEME="dark"
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_TRANSITIONS=true

# Authentication (Future Implementation)
NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_URL="https://cultural-arbitrage.vercel.app"  # Production
NEXTAUTH_SECRET="cultural-arbitrage-nextauth-secret-change-in-production"

# Blockchain & Web3 Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=""
