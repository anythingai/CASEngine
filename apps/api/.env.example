# Cultural Arbitrage API - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV="development"
# NODE_ENV="production"  # For production deployment
PORT=8000

# Logging Configuration
LOG_LEVEL="info"
# LOG_LEVEL="warn"  # For production (less verbose)

# CORS Configuration
# Development
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Production (Update with your deployment URLs)
# CORS_ORIGINS="https://cultural-arbitrage.vercel.app,https://your-domain.com"

# Database Configuration (Optional - using in-memory caching for MVP)
DATABASE_URL="postgresql://user:password@localhost:5432/cultural_arbitrage"
REDIS_URL="redis://localhost:6379"

# Production Database Examples
# DATABASE_URL="postgresql://user:password@host:5432/cultural_arbitrage?sslmode=require"
# REDIS_URL="rediss://user:password@host:6379"  # Railway/Render Redis

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
API_KEY="your-api-key-for-protected-endpoints"

# External API Keys for Data Sources
# Note: Google Trends API requires no authentication - it's free to use

INSTAGRAM_API_KEY=""
INSTAGRAM_API_SECRET=""

REDDIT_CLIENT_ID=""
REDDIT_CLIENT_SECRET=""

DISCORD_BOT_TOKEN=""
TELEGRAM_BOT_TOKEN=""

# Web3 & Blockchain APIs
ALCHEMY_API_KEY=""
INFURA_PROJECT_ID=""
MORALIS_API_KEY=""
OPENSEA_API_KEY=""

# AI/ML Services
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Azure OpenAI Services (Alternative to OpenAI)
AZURE_OPENAI_API_KEY=""
AZURE_OPENAI_ENDPOINT="https://your-resource.cognitiveservices.azure.com/"
AZURE_OPENAI_DEPLOYMENT="o4-mini"
AZURE_OPENAI_API_VERSION="2025-01-01-preview"

# Example for your specific Azure setup:
# AZURE_OPENAI_API_KEY="your-azure-api-key"
# AZURE_OPENAI_ENDPOINT="https://btclayer-ai-models-resource.cognitiveservices.azure.com/"
# AZURE_OPENAI_DEPLOYMENT="o4-mini"
# AZURE_OPENAI_API_VERSION="2025-01-01-preview"

# Qloo Taste AI
QLOO_API_KEY=""
QLOO_API_URL="https://api.qloo.com"

# Crypto/NFT APIs
COINGECKO_API_KEY=""
OPENSEA_API_KEY=""

# Social Media APIs (additional)
FARCASTER_API_KEY=""

# Analytics & Monitoring
SENTRY_DSN=""
DATADOG_API_KEY=""

# External Services
SENDGRID_API_KEY=""
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""

# Cache Configuration
CACHE_TTL_SHORT=300        # 5 minutes
CACHE_TTL_MEDIUM=1800      # 30 minutes  
CACHE_TTL_LONG=3600        # 1 hour

# Production Cache Settings (longer TTL for better performance)
# CACHE_TTL_SHORT=600      # 10 minutes
# CACHE_TTL_MEDIUM=3600    # 1 hour
# CACHE_TTL_LONG=7200      # 2 hours

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000    # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100    # 100 requests per window

# Production Rate Limiting (more restrictive)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=500  # 500 requests per window (higher for production)

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
ENABLE_CORS=true
ENABLE_COMPRESSION=false
# ENABLE_COMPRESSION=true  # Enable for production

# Performance Configuration
MAX_REQUEST_SIZE="10mb"
REQUEST_TIMEOUT=30000      # 30 seconds

# Production Performance Settings
# REQUEST_TIMEOUT=60000    # 60 seconds for production
# MAX_REQUEST_SIZE="50mb"  # Larger limit for production

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Deployment Environment Detection
# These are automatically set by deployment platforms:
# RAILWAY_ENVIRONMENT="production"    # Set by Railway
# RENDER="true"                       # Set by Render
# PORT="${PORT}"                      # Set by platform (Railway/Render)

# SSL Configuration (Production)
SSL_CERT=""
SSL_KEY=""
FORCE_HTTPS=false
# FORCE_HTTPS=true  # Enable for production

# Session Configuration
SESSION_SECRET="cultural-arbitrage-session-secret-change-in-production"
SESSION_TIMEOUT=86400000  # 24 hours

# API Versioning
API_VERSION="v1"
API_BASE_PATH="/api"

# Error Handling
ENABLE_STACK_TRACE=true
# ENABLE_STACK_TRACE=false  # Disable for production

# Monitoring & Telemetry
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false
# PROMETHEUS_ENABLED=true  # Enable for production monitoring

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10000  # 10 seconds

# Clustering (Production)
CLUSTER_WORKERS=0  # 0 = auto-detect CPU cores
# CLUSTER_WORKERS=2  # Specific number for production

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=false
# CSP_ENABLED=true  # Enable for production

# Development Tools
ENABLE_SWAGGER=true
# ENABLE_SWAGGER=false  # Disable for production
ENABLE_PLAYGROUND=true
# ENABLE_PLAYGROUND=false  # Disable for production

# Build Information
BUILD_VERSION="0.1.0"
BUILD_TIMESTAMP=""
GIT_COMMIT=""

# Webhook Configuration (if needed)
WEBHOOK_SECRET=""
WEBHOOK_TIMEOUT=5000

# Backup Configuration (Production)
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000  # 24 hours
BACKUP_RETENTION=604800000  # 7 days