{
  "name": "@cultural-arbitrage/api",
  "version": "0.1.0",
  "private": true,
  "description": "Cultural Arbitrage API server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@cultural-arbitrage/shared": "file:../../packages/shared",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "openai": "^4.70.0",
    "rate-limiter-flexible": "^4.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.5"
  }
}
