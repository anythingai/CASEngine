{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "${{ PORT }}",
        "LOG_LEVEL": "info",
        "CORS_ORIGINS": "${{ CORS_ORIGINS }}",
        "CACHE_TTL_SHORT": "300",
        "CACHE_TTL_MEDIUM": "1800",
        "CACHE_TTL_LONG": "3600",
        "RATE_LIMIT_WINDOW_MS": "900000",
        "RATE_LIMIT_MAX_REQUESTS": "100"
      },
      "secrets": [
        "JWT_SECRET",
        "API_KEY",
        "OPENAI_API_KEY",
        "ANTHROPIC_API_KEY",
        "QLOO_API_KEY",
        "COINGECKO_API_KEY",
        "OPENSEA_API_KEY",
        "TWITTER_API_KEY",
        "TWITTER_API_SECRET",
        "TWITTER_BEARER_TOKEN",
        "FARCASTER_API_KEY"
      ]
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PORT": "${{ PORT }}",
        "LOG_LEVEL": "debug",
        "CORS_ORIGINS": "${{ CORS_ORIGINS }}",
        "CACHE_TTL_SHORT": "60",
        "CACHE_TTL_MEDIUM": "300",
        "CACHE_TTL_LONG": "600"
      }
    }
  },
  "regions": [
    "us-west1"
  ],
  "healthcheckPath": "/health",
  "healthcheckTimeout": 300,
  "staticPublishPath": null,
  "cronJobs": [],
  "plugins": [],
  "nixpkgs": []
}