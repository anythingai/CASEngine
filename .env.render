# Cultural Arbitrage - Render Environment Configuration
# Copy these values to your Render service environment variables

# === CORE SETTINGS ===
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# === INTERNAL API COMMUNICATION ===
NEXT_PUBLIC_API_URL=http://localhost:8000

# === SECURITY (GENERATE STRONG VALUES!) ===
# Generate with: openssl rand -hex 32
JWT_SECRET=REPLACE_WITH_STRONG_32_CHAR_SECRET
# Generate with: openssl rand -hex 24  
API_KEY=REPLACE_WITH_STRONG_24_CHAR_SECRET

# === AZURE OPENAI CONFIGURATION ===
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=o4-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# === CRYPTO/NFT APIs ===
COINGECKO_API_KEY=your_coingecko_api_key_here
OPENSEA_API_KEY=your_opensea_api_key_here

# === SOCIAL MEDIA APIs ===
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
FARCASTER_API_KEY=your_farcaster_api_key_here

# === QLOO TASTE AI (OPTIONAL) ===
QLOO_API_KEY=your_qloo_api_key_here
QLOO_API_URL=https://api.qloo.com

# === PERFORMANCE SETTINGS ===
LOG_LEVEL=info
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true
MAX_REQUEST_SIZE=5mb
REQUEST_TIMEOUT=15000
HEALTH_CHECK_INTERVAL=30000

# === CORS CONFIGURATION ===
# Update this with your actual Render URL after deployment
CORS_ORIGINS=https://your-app-name.onrender.com,http://localhost:3000

# === WEB APP CONFIGURATION ===
NEXT_PUBLIC_APP_NAME=Cultural Arbitrage Signal Engine
NEXT_PUBLIC_APP_TAGLINE=Trade the trend before it trends — with taste‑powered alpha
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_DEFAULT_THEME=dark

# === MONITORING (OPTIONAL) ===
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here